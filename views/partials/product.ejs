<article>
    <a href="/products/<%= product.id%>">
        <img src="/images/<%= product.image %>" alt="<%= product.image %>" width="100%" class="img"></a>
    <div>
        <i class="fas fa-truck"></i>
        <p class="precio">$<%= product.price %>
        </p>
        <p class="descuento">
            <%= product.discount %>% OFF
        </p>
        <p class="descripcion"><strong>
                <%= product.name %>
            </strong></p>
    </div>
</article>