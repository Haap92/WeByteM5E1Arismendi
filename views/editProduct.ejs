<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>
<body>
    <%- include('partials/header') %>
    <main>
    <section>
        <form action="/products/<%= product.id %>?_method=PUT" method="POST" class="create-form" enctype="multipart/form-data">
            <div class="tituloSection">
                <h3>Editar de productos</h3>
            </div>
            <div class="control-formulario">
                <input type="text" name="ID" value="<%= product.id %>" class="control" disabled><span></span>
            </div>
    <div class="control-formulario">
        <input type="text" name="name" value="<%= product.name %>" class="control" minlength="5"><span></span>
    </div>
    <div class="control-formulario">
      <input type="number" name="price" value="<%= product.price %>" class="control" minlength="5"><span></span>
    </div>
    <div class="control-formulario">
        <input type="number" name="descuento" value="<%= product.descuento %>" class="control" minlength="5"><span></span>
    </div>
        <div class="control-formulario">
        <label class="label-titulo">Imagen del producto</label>
        <input type="file" name="image" accept=".jpg, .png" class="control none">
        <input type="hidden" name="oldImage" value="<%= product.image %>">
    </div>
        <div class="control-formulario">
            <textarea name="description" rows="10" cols="50" class="control" minlength="8" ><%= product.description %></textarea><span></span>
    </div>
    <button type="submit" class="boton-enviar">Guardar Cambio</button>
    <button type="reset" class="boton-borrar">Borrar</button>
    </form>
</section>
</main>
<%- include('partials/footer') %>

</body>
</html>